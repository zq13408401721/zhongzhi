<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.live.VideoActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/iu"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_cl"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_video_tv"
        android:layout_width="220dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/video_head"
            android:src="@mipmap/mm"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/video_name"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="3dp"
            android:text="卡小诺"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/video_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/video_number"
            app:layout_constraintTop_toBottomOf="@+id/video_name"
            app:layout_constraintLeft_toRightOf="@+id/video_head"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:text="88206"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/video_name"
            app:layout_constraintLeft_toRightOf="@+id/video_number"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:text="在线"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_attention"
            android:layout_width="70dp"
            android:text="PK"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:layout_height="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/video_exit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/cha"
        app:layout_constraintBottom_toBottomOf="@+id/video_cl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/video_cl" />
    <ImageView
        android:id="@+id/video_cut"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toLeftOf="@+id/video_exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/qiehuantuichu"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/huabanfuben"
        app:layout_constraintRight_toLeftOf="@+id/video_cut"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/video_usernumber"
        app:layout_constraintTop_toBottomOf="@+id/video_cl"
        android:layout_marginTop="23dp"
        android:background="@drawable/shape_video_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="人气5630万"
        android:layout_width="140dp"
        android:layout_height="35dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/video_usernumber"
        app:layout_constraintTop_toBottomOf="@+id/video_cl">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@mipmap/mm" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@mipmap/mm" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@mipmap/mm" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@mipmap/mm" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@mipmap/mm" />
    </LinearLayout>
        <EditText
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="130dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:hint="输入你想对主播说的话...."
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_video_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/video_praise"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/zan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="50dp"
        android:layout_height="55dp"/>
    <ImageView
        android:id="@+id/video_gift"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/liwu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/video_praise"
        android:layout_width="50dp"
        android:layout_height="55dp"/>

    <com.app.zhongying.common.LoveLayout
        android:id="@+id/video_love"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        tools:layout_editor_absoluteY="3dp" />
</androidx.constraintlayout.widget.ConstraintLayout>