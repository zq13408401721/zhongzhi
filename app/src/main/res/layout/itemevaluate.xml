<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/d8"
    android:layout_height="wrap_content"
    android:background="@drawable/card_style"
    android:elevation="2dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView"
        android:background="@drawable/evaluate_img_shape"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d300"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_bg"
      />

    <ImageView
        android:id="@+id/item_evaluate_zuanshi_img"
        android:layout_width="@dimen/d50"
        android:layout_height="@dimen/d50"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/zuanshi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/item_evaluate_integral_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="积分兑换"
        android:textSize="@dimen/size_8"
        app:layout_constraintBottom_toBottomOf="@+id/item_evaluate_zuanshi_img"
        app:layout_constraintStart_toEndOf="@+id/item_evaluate_zuanshi_img"
        app:layout_constraintTop_toTopOf="@+id/item_evaluate_zuanshi_img" />

    <TextView
        android:id="@+id/item_evaluate_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:maxLines="2"
        android:text="蔻翠堂—2020年最新推出护肤套装精选礼盒..."
        android:textSize="@dimen/text_size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_evaluate_zuanshi_img" />

    <TextView
        android:id="@+id/item_evaluate_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="￥199.9"
        android:textColor="#ff00"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_evaluate_content_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>