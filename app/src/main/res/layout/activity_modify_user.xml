<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/line"
    android:padding="5dp"
    android:background="#FFFEFE"
    tools:context=".activity.own.Modify_userActivity">

    <include
        android:id="@+id/modify_too"
        layout="@layout/toolber" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="7dp"
        android:background="#EAE7E7" />

    <RelativeLayout
        android:id="@+id/modify_head"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 头像"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_18" />

        <ImageView
            android:id="@+id/modify_head_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jinru" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="#EAE7E7" />

    <RelativeLayout
        android:id="@+id/modify_name_img"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 昵称"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/modify_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:scaleType="centerCrop"
            android:text="ingsrs"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jinru" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="#EAE7E7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:id="@+id/modify_resume_img"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" 个人简历"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/modify_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:scaleType="centerCrop"
            android:text="填写个人简历"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jinru" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="#EAE7E7" />

    <RelativeLayout
        android:id="@+id/modify_sex_img"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 性别"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/modify_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:scaleType="centerCrop"
            android:text="男"
            android:textSize="16dp" />

        <ImageView

            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jinru" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="#EAE7E7" />

    <RelativeLayout
        android:id="@+id/modify_age_img"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 年龄"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/modify_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:scaleType="centerCrop"
            android:text="22"
            android:textSize="16dp" />

        <ImageView

            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jinru" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="#EAE7E7" />

    <RelativeLayout
        android:id="@+id/modify_phone_img"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 手机号"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/modify_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:scaleType="centerCrop"
            android:text="未绑定"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jinru" />


    </RelativeLayout>


</LinearLayout>