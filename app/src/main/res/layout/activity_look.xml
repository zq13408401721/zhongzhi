<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".ui.shop.activity.LookActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/yseture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="付款成功"
        android:textColor="#BF1111"
        android:textSize="22sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_img"/>

    <com.app.zhongying.ui.shop.utils.HorizontalListView
        android:id="@+id/mlv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/look_iv_location"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/icon_location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/look_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="用户姓名"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/look_iv_location"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/look_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="152****5453"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/look_tv_name"
            app:layout_constraintTop_toTopOf="@id/look_tv_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:maxEms="13"
            android:text="北京朝阳区高碑店村水南庄13号楼一单元"
            app:layout_constraintLeft_toRightOf="@id/look_iv_location"
            app:layout_constraintTop_toBottomOf="@id/look_tv_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/look_lin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/look_orvernumber"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sp_15"
                android:textColor="#000000"
                android:text="订单编号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_150"
                android:text="1186603245125014241"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/look_tv_copy"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:text=" 复制"
                android:textColor="#000000"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/look_iv_img"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/look_lin"/>

        <TextView
            android:id="@+id/look_tv_commodityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="MARICE魅力资女士素颜霜"
            android:textColor="#323131"
            app:layout_constraintLeft_toRightOf="@id/look_iv_img"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="单只 X1"
            app:layout_constraintLeft_toRightOf="@id/look_iv_img"
            app:layout_constraintTop_toBottomOf="@id/look_tv_commodityname" />

        <TextView
            android:id="@+id/look_commoditymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="商品金额"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@id/look_iv_img"
            app:layout_constraintTop_toBottomOf="@id/look_iv_img" />

        <TextView
            android:id="@+id/look_tv_commoditymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="￥99.90"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/look_commoditymoney" />

        <TextView
            android:id="@+id/look_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="运费"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@id/look_commoditymoney"
            app:layout_constraintTop_toBottomOf="@id/look_commoditymoney" />

        <TextView
            android:id="@+id/look_tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="￥0.00"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/look_freight" />

        <TextView
            android:id="@+id/look_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="小计"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@id/look_freight"
            app:layout_constraintTop_toBottomOf="@id/look_freight" />

        <TextView
            android:id="@+id/look_tv_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="￥99.90"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/look_subtotal" />
        <TextView
            android:id="@+id/look_discounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="优惠"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@id/look_subtotal"
            app:layout_constraintTop_toBottomOf="@id/look_subtotal" />

        <TextView
            android:id="@+id/look_tv_discounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="-￥0.00"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/look_discounts" />
        <TextView
            android:id="@+id/look_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="使用资产抵扣"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@id/look_discounts"
            app:layout_constraintTop_toBottomOf="@id/look_discounts" />

        <TextView
            android:id="@+id/look_tv_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="-￥0.00"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/look_deduction" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/look_Realpay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="实付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/look_tv_Realpay"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="￥99.90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:text="下单时间：2020-06-09 19：18：55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>