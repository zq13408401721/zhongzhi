<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.own.ServiceActivity">
    <include android:id="@+id/service"
        layout="@layout/toolber"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/service_rec"
       app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="@dimen/dp_60">
    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:id="@+id/service_edittext"
        android:layout_width="260dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/service"
        android:layout_height="@dimen/dp_30">

        <EditText
            android:id="@+id/service_text"
            android:textSize="@dimen/dp_15"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:hint="请详细说明你的问题"
            android:layout_height="@dimen/dp_30"/>
    </LinearLayout>

    <ImageView
        android:background="@drawable/cha"
        android:layout_width="@dimen/dp_30"
       android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
       android:layout_toRightOf="@id/service_edittext"
        android:layout_height="@dimen/dp_30"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_below="@id/service_edittext"
        android:layout_marginTop="@dimen/sp_15"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>