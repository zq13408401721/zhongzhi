<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/rv_im_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="YSL魅力资女是素颜霜"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@+id/rv_im_head"
        app:layout_constraintTop_toTopOf="@+id/rv_im_head" />

    <TextView
        android:id="@+id/rv_tv_integeral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="1600积分"
        app:layout_constraintLeft_toRightOf="@+id/rv_im_head"
        app:layout_constraintTop_toBottomOf="@+id/rv_tv_name" />

    <TextView
        android:id="@+id/rv_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="售价：￥378.00"
        app:layout_constraintLeft_toRightOf="@+id/rv_im_head"
        app:layout_constraintTop_toBottomOf="@+id/rv_tv_integeral" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rectangle_shape"
        android:gravity="center"
        android:text="兑换"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_tv_price"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>